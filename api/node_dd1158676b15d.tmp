const express = require('express')
const mysql = require('mysql')
const con = require('../database')


const app =  express()
const port = process.env.Port || 3000

app.get('/flow', (req, res) => {
    try {
        let sql = 'SELECT * FROM fluo'
        con.query(sql, (err, rows) => {
            res.send(rows)
            console.error(err)
        })
        
    } catch (err) {
        console.error(err)
    } 
})

